server:
  http_listen_port: 9080
  grpc_listen_port: 0

positions:
  filename: /tmp/positions.yaml

clients:
  - url: http://{{ log_server_internal_ip }}:3100/loki/api/v1/push

scrape_configs:
  - job_name: system
    static_configs:
{% for path in log_path %}
      - targets:
          - localhost
        labels:
          job: {{ promtail_host }}
          host: {{ promtail_host }}
          __path__: {{ path }}
{% endfor %}

